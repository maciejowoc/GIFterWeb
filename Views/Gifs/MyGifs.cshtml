@model IEnumerable<Gif>
@{
    ViewData["Title"] = "My Gifs";
}

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/gifCard.css">
    <script defer type="text/javascript" src="~/js/updateData.js"></script>
</head>

<h1>My Gifs</h1>


@foreach(var obj in Model)
{
    <div class="ImgCard">
        <div class="CardHeader">
            <span class="Author">@obj.Author</span>
            <span class="DateOfPosting">Added: @obj.Created.ToShortDateString()</span>
        </div>
        <div class="CardBody">
            <img src=@obj.Image />
            <div class="Tags">
                @foreach (var tag in obj.Tags.Split(','))
                {
                    <span class="Tag">@tag</span>
                }
            </div>
            <div class="CardButtons">
                @Html.ActionLink("X","Delete", new {id = obj.Id}, new {@class="optionButton"})
                <a class="optionButton" onclick="ShowInterface(this)">Y</a>
            </div>
        </div>
    </div>
}
<dialog id="alterModal">
    <button id="addTag">+</button>
    <div id="tagsField">

    </div>
    <button id="alterModalCancel" onclick="cancelModal()">Cancel</button>
</dialog>